<mujoco model="6dof_robot">
  <option timestep="0.002" gravity="0 0 -9.81"/>
  
  <asset>
    <!-- Подключаем файлы геометрии -->
    <mesh name="base_mesh" file="parts/base.stl"/>
    <mesh name="link1_mesh" file="parts/link1.stl"/>
    <mesh name="link2_mesh" file="parts/link2.stl"/>
    <mesh name="link3_mesh" file="parts/link3.stl"/>
    <mesh name="link4_mesh" file="parts/link4.stl"/>
    <mesh name="link5_mesh" file="parts/link5.stl"/>
    <mesh name="link6_mesh" file="parts/link6.stl"/>
    <mesh name="endEffector_mesh" file="parts/endEfector.stl"/>
    
    <!-- Текстура для пола -->
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4"/>
    <material name="floor_mat" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0.2"/>
  </asset>

  <worldbody>
    <!-- Пол - плоскость размером 10x10 метров -->
    <geom name="floor" type="plane" size="1000 1000 0.01" pos="0 0 0" material="floor_mat" rgba="0.5 0.5 0.5 1"/>
    
    <!-- Освещение -->
    <light name="top" pos="0 1000 1000" dir="0 0 -1" diffuse="0.8 0.8 0.8"/>
    <light name="spotlight" pos="0 -100 1000" mode="fixed" diffuse="0.6 0.6 0.6"/>
    
    <!-- База (закреплена) -->
    <body name="base">
      <geom type="mesh" mesh="base_mesh" name="base_geom"/>

        <body name="link1" pos="0 0 16">
          <geom type="mesh" mesh="link1_mesh" name="link1_geom"/>

          <body name="link2" pos="0 0 232.5">
            <joint name='joint1'/>
            <geom type="mesh" mesh="link2_mesh" name="link2_geom"/>

            <body name="link3" pos="0 120.5 0">
              <joint name="joint2" axis='0 1 0'/>
              <geom type="mesh" mesh="link3_mesh" name="link3_geom"/>

              <body name="link4" pos='0 -97.5 375'>
                <joint name="joint3" type="hinge" range='-160 160' axis='0 1 0'/>
                <geom type="mesh" mesh="link4_mesh" name="link4_geom"/>

                <body name="link5" pos="0 97.5 295">
                  <joint name="joint4" axis='0 1 0'/>
                  <geom type="mesh" mesh="link5_mesh" name="link5_geom"/>

                  <body name="link6" pos='0 0 171'>
                    <joint name="joint5"/>
                    <geom type="mesh" mesh="link6_mesh" name="link6_geom"/>

                    <body name="end-effector" pos='0 122.5 0'>
                      <joint name='joint6'/>
                      <geom type="mesh" mesh="endEffector_mesh" name="endeffector"/>
                    </body>

                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
    </body>
  </worldbody>
</mujoco>
